<div class="card mb-3">
  <h2 class="card-header h4">
    Exercise #<%= exercise.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <dd>
        <% if @exercise.user.present? %>
          <%= link_to exercise.user, exercise.user %>
        <% end %>
      </dd>

      <dt>Workout</dt>
      <dd>
        <% if @exercise.workout.present? %>
          <%= link_to exercise.workout, exercise.workout %>
        <% end %>
      </dd>

      <dt>Completed on</dt>
      <dd><%= exercise.completed_on %></dd>

      <dt>Weight</dt>
      <dd><%= exercise.weight %></dd>

      <dt>Reps</dt>
      <dd><%= exercise.reps %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back exercise, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_user == @exercise.user %>
          <%= link_to edit_exercise_url(exercise), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @exercise.user %>
          <%= link_to exercise, method: :delete, data: { confirm: "Do you really want to delete this exercise?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(exercise.updated_at) %> ago
  </div>
</div>
