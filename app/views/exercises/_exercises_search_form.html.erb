<%= search_form_for @q, :class => collapse_search_form, :id => "exercises_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :reps_cont, "Reps contains" %>
    <%= f.text_field :reps_cont, :class => "form-control", :placeholder => "Reps contains" %>
  </div>

  <div class="form-group">
    <%= f.label :weight, "Weight" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :weight_gteq, :class => "form-control", :placeholder => "Weight greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :weight_lteq, :class => "form-control", :placeholder => "Weight less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :completed_on, "Completed on" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='completed_ongteqPicker' data-target-input="nearest">
          <%= f.text_field :completed_on_gteq, :class => "form-control datetimepicker-input", :placeholder => "Completed on greater than or equal to", :data => {:target => '#completed_ongteqPicker'} %>
          <div class="input-group-append" data-target='#completed_ongteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='completed_onlteqPicker' data-target-input="nearest">
          <%= f.text_field :completed_on_lteq, :class => "form-control datetimepicker-input", :placeholder => "Completed on less than or equal to", :data => {:target => '#completed_onlteqPicker'} %>
          <div class="input-group-append" data-target='#completed_onlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#completed_ongteqPicker').datetimepicker({
              format: 'MM/DD/YYYY'
          });
          $('#completed_onlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'MM/DD/YYYY'
          });
          $('#completed_ongteqPicker').on("dp.change", function (e) {
              $('#completed_onlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#completed_onlteqPicker').on("dp.change", function (e) {
              $('#completed_ongteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :user_email_cont, "User email contains" %>
    <%= f.text_field :user_email_cont, :class => "form-control", :placeholder => "User email contains" %>
  </div>

  <div class="form-group">
    <%= f.label :workout_name_cont, "Workout name contains" %>
    <%= f.text_field :workout_name_cont, :class => "form-control", :placeholder => "Workout name contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/exercises" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#exercises_filters">
  Show filters
</a>
